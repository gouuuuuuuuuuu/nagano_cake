<h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
<div class="container">
<div class="row">
<div class="col-3">
会員ID
</div>
<div class="col-8">
<%= @customer.id %></br>
</div>

<div class="col-3">
氏名
</div>
<div class="col-8">
<%= @customer.last_name + @customer.first_name %></br>
</div>

<div class="col-3">
フリガナ
</div>
<div class="col-8">
<%= @customer.last_name_kana + @customer.first_name_kana %></br>
</div>

<div class="col-3">
郵便番号
</div>
<div class="col-8">
<%= @customer.postal_code %></br>
</div>

<div class="col-3">
住所
</div>
<div class="col-8">
<%= @customer.address %></br>
</div>

<div class="col-3">
電話番号
</div>
<div class="col-8">
<%= @customer.telephone_number %></br>
</div>

<div class="col-3">
メールアドレス
</div>
<div class="col-8">
<%= @customer.email %></br>
</div>

<div class="col-3">
会員ステータス
</div>
<div class="col-8">
<% if @customer.is_deleted == true %>
	<span style="color :silver">退会</span>
	<% else %>
	<span style="color :green">有効</span>
	<% end %></br>
</div>

<div class="col-2">
<%= link_to '編集する',edit_admin_customer_path(@customer), class: "btn btn-success" %>
</div>

<div class="col-4">
<%= link_to '注文履歴一覧を見る',admin_orders_path(@customers), class: "btn btn-primary" %>
</div>
<div class="col-8">
</div>
</div>
</div>
</div>


