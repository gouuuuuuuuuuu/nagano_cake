<h2>ジャンル一覧・追加</h2>



 <%= form_with model: Genre.new, url: admin_genres_path, method: :POST do |f| %>
 <p>ジャンル名
 <%= f.text_field :name %>
 
 <%= f.submit '新規登録', class: "btn btn-success" %>
 <% end %>
 </p>


  
  <table class="table-striped">
  	<thead>
  	  <tr>
  	    <th>ジャンル</th>
  	  </tr>
  	</thead>
  	<% @genres.each do |genre|%>
  	<tbody>
  	  <tr>
  	    <td>
  	     <%= genre.name %>
  	    </td>
  	    <td>
  	     <%= link_to "編集する",edit_admin_genre_path(genre),class: "btn btn-success" %>
  	    </td>
  	    </tr>
  	</tbody>
  	<% end %>
  </table>
