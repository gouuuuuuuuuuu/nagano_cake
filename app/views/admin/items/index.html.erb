<h2>商品一覧 </h2>
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				商品ID
			</th>
			<th>
				商品名
			</th>
			<th>
				税抜価格
			</th>
			<th>
				ジャンル
			</th>
			<th>
				ステータス
			</th>
		</tr>
	</thead>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td>
				<%= item.id %>
			</td>
		    <td>
		    <%= link_to admin_item_path(item.id) do %>
				<%= item.name %>
				<% end %>
				
		    </td>
			<td>
				<%= item.price %>
			</td>
			<td>
				<%= item.genre.name %>
			</td>
			<td>
				<% if item.is_active == true %>
				<span style="color :green">販売中</span>
				<% else %>
				<span style="color :silver">販売停止中</span>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<div class="mx-auto">
<%= paginate @items %>
</div>