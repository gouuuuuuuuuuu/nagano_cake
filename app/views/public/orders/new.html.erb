<h2>注文情報入力</h2>

<h4>支払方法</h4>
<%= form_with model: @order, url: confirmation_public_orders_path do |f| %>
<%= f.radio_button :payment_method, "credit_card" %>
<%= f.label :payment_method, "クレジットカード" %></br>

<%= f.radio_button :payment_method, "transfer" %>
<%= f.label :payment_method, "銀行振込" %>



<h4>お届け先</h4>
<%= f.radio_button :select_address, 0%> ご自身の住所</br>
<%= current_customer.postal_code %>
<%= current_customer.address %></br>
<%= current_customer.last_name + current_customer.first_name %></br>

<%= f.radio_button :select_address, 1%> 登録済みの住所から選択</br>
<%= f.select :address_id,options_from_collection_for_select(Address.all, :id, :address_display) %></br>

<%= f.radio_button :select_address, 2%> 新しいお届け先</br>
郵便番号(ハイフンなし) <%= f.text_field :postal_code %></br>
住所 <%= f.text_field :address %></br>
宛名 <%= f.text_field :name %></br>


<%= f.submit '確認画面に進む', class: "btn btn-success" %>
<% end %>


